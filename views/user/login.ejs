  </head>

  <body>

  <div class="container-fluid">
    <% console.log(validationErrors) %>
    <div class="login_container">
        <div class="row">
            <div class="col-4">

            </div>
            <div class="col-4">
                <div class="login_mod">
                    <p class="login_title">Login</p>
                    <form action = "/login" method = "POST">
                      <div class="login_row">
                        <label>
                            Username
                        </label>
                        <input
                        class ="login_form "
                        value ="<%= userInput.email %>"  name = "username" placeholder = "Enter Username"/>
                      </div>
                      <div class="login_row">
                        <label>
                            Password
                        </label>
                        <input
                        class ="login_form "
                         value= "<%= userInput.password %>" name = "password" type="password" placeholder = "Enter Password"/>
                        <a href = "/reset"> <p class="forgot_pass">Forgot Password?</p> </a>
                      </div>

                    <button class="login_button" type="submit">Login</button>

                  </form>

                </div>
            </div>
            <div class="col-4"></div>
        </div>
    </div>

  </div>

